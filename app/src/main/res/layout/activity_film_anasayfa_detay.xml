<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".FilmAnasayfaDetayActivity">

    <WebView
        android:id="@+id/wvFragman"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvYonetmen"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tvYonetmen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="YÖNETMEN"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvVizyon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wvFragman" />

    <TextView
        android:id="@+id/tvFilmPuan"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="PUAN"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvFilmBasrol"
        app:layout_constraintStart_toStartOf="@+id/tvFilmBasrol"
        app:layout_constraintTop_toBottomOf="@+id/tvFilmBasrol" />

    <TextView
        android:id="@+id/tvVizyon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="VİZYON"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvFilmSure"
        app:layout_constraintEnd_toEndOf="@+id/tvYonetmen"
        app:layout_constraintStart_toStartOf="@+id/tvYonetmen"
        app:layout_constraintTop_toBottomOf="@+id/tvYonetmen" />

    <TextView
        android:id="@+id/tvFilmKategori"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="KATEGORİ"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvFilmBasrol"
        app:layout_constraintEnd_toEndOf="@+id/tvFilmSure"
        app:layout_constraintStart_toStartOf="@+id/tvFilmSure"
        app:layout_constraintTop_toBottomOf="@+id/tvFilmSure" />

    <TextView
        android:id="@+id/tvFilmBasrol"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BAŞROL"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvFilmPuan"
        app:layout_constraintEnd_toEndOf="@+id/tvFilmKategori"
        app:layout_constraintStart_toStartOf="@+id/tvFilmKategori"
        app:layout_constraintTop_toBottomOf="@+id/tvFilmKategori" />

    <TextView
        android:id="@+id/tvFilmSure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="SÜRE"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvFilmKategori"
        app:layout_constraintEnd_toEndOf="@+id/tvVizyon"
        app:layout_constraintStart_toStartOf="@+id/tvVizyon"
        app:layout_constraintTop_toBottomOf="@+id/tvVizyon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Filmin Fragmanına Bir Göz Atın..."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wvFragman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>